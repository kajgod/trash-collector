{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es2015", "es2016", "DOM", "DOM.Iterable", "ESNext"]
  },
  "include": ["src/main.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
